<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/album_rectangle2"
        android:layout_width="900dp"
        android:layout_height="712dp"
        android:layout_marginBottom="38dp"
        android:src="@drawable/blue_background"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <ImageView
        android:id="@+id/rectangle"
        android:layout_width="379dp"
        android:layout_height="600dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="50dp"
        android:src="@drawable/display_rectangle"
        app:layout_constraintStart_toStartOf="@+id/album_rectangle2"
        app:layout_constraintTop_toTopOf="@+id/album_rectangle2" />


    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="horizontal"
        android:layout_marginStart="20dp"
        android:layout_marginTop="195dp"
        app:layout_constraintStart_toStartOf="@+id/rectangle"
        app:layout_constraintTop_toTopOf="@+id/rectangle">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/spotifyfont"
                android:text="Top Albums"
                android:textColor="@color/white"
                android:textSize="30sp"
                tools:layout_editor_absoluteX="40dp"
                tools:layout_editor_absoluteY="400dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/spotifyfont"
                android:text="1. Album 1"
                android:textColor="@color/white"
                android:textSize="27sp"
                tools:layout_editor_absoluteX="40dp"
                tools:layout_editor_absoluteY="400dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/spotifyfont"
                android:text="2. Album 2"
                android:textColor="@color/white"
                android:textSize="27sp"
                tools:layout_editor_absoluteX="40dp"
                tools:layout_editor_absoluteY="400dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/spotifyfont"
                android:text="3. Album 3"
                android:textColor="@color/white"
                android:textSize="27sp"
                tools:layout_editor_absoluteX="40dp"
                tools:layout_editor_absoluteY="400dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/spotifyfont"
                android:text="4. Album 4"
                android:textColor="@color/white"
                android:textSize="27sp"
                tools:layout_editor_absoluteX="40dp"
                tools:layout_editor_absoluteY="400dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/spotifyfont"
                android:text="5. Album 5"
                android:textColor="@color/white"
                android:textSize="27sp"
                tools:layout_editor_absoluteX="40dp"
                tools:layout_editor_absoluteY="400dp" />

        </LinearLayout>

        <Space
            android:layout_width="25dp"
            android:layout_height="80dp" />

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="150dp"
            android:layout_height="150dp"

            tools:srcCompat="@drawable/drake" />
    </LinearLayout>


</androidx.constraintlayout.widget.ConstraintLayout>